<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Total Expense Text -->
    <TextView
        android:id="@+id/total_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Expenses: $0.00"
        android:textSize="20sp"
        android:layout_marginBottom="32dp"
        android:textStyle="bold" />

    <!-- Food Category Expense -->
    <TextView
        android:id="@+id/food_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food: $0.00"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- Transport Category Expense -->
    <TextView
        android:id="@+id/transport_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transport: $0.00"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- Accommodation Category Expense -->
    <TextView
        android:id="@+id/accommodation_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accommodation: $0.00"
        android:textSize="18sp"
        android:layout_marginBottom="32dp" />

    <!-- Add Expense Button -->
    <Button
        android:id="@+id/add_expense_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Expense"
        android:textSize="18sp"
        android:layout_marginTop="32dp" />

</LinearLayout>
