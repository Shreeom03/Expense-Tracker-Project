<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/total_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: 0.0"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- Category Breakdown -->
    <TextView
        android:id="@+id/food_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food: 0.0"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/transport_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transport: 0.0"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/accommodation_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accommodation: 0.0"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/adventure_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adventure: 0.0"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/extra_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extra: 0.0"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Add Expense Button -->
    <Button
        android:id="@+id/add_expense_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Expense"
        android:onClick="addExpense" />
</LinearLayout>
